<idea-plugin version="2" url="https://github.com/wuzhizhan/intellij-mybatis-plugin.git">
    <id>cn.wuzhizhan.plugin.mybatis</id>
    <name>Free MyBatis plugin</name>
    <version>2017.1.0</version>
    <vendor email="wuzhizhan@wuzhizhan.cn" url="https://github.com/wuzhizhan">wuzhizhan</vendor>

    <description><![CDATA[
          Free Mybatis plugin <br/>
          This Plugin is fork from https://github.com/rockjava/intellij-mybatis-plugin
      ]]></description>

    <change-notes><![CDATA[
       <h4>2016.1.2</h4>
      <ul>
          <li>fix some bugs</li>
      </ul>
      <h4>2016.1.1</h4>
      <ul>
          <li>Adapt for for intellij 2016.1.1</li>
      </ul>
      ]]>
    </change-notes>

    <idea-version since-build="132.947"/>
    <depends optional="true">com.intellij.sql</depends>
    <depends optional="true">com.intellij.spring</depends>
    <extensions defaultExtensionNs="com.intellij">
        <dom.fileDescription implementation="cn.wuzhizhan.mybatis.dom.description.MapperDescription"/>
        <dom.fileDescription implementation="cn.wuzhizhan.mybatis.dom.description.ConfigurationDescription"/>
        <definitionsSearch implementation="cn.wuzhizhan.mybatis.definitionsearch.MapperDefinitionSearch"/>
        <projectService serviceImplementation="cn.wuzhizhan.mybatis.service.JavaService"/>
        <projectService serviceImplementation="cn.wuzhizhan.mybatis.service.AnnotationService"/>
        <projectService serviceImplementation="cn.wuzhizhan.mybatis.service.EditorService"/>
        <projectService serviceImplementation="cn.wuzhizhan.mybatis.alias.AliasFacade"/>
        <projectService serviceImplementation="cn.wuzhizhan.mybatis.locator.MapperLocator"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="cn.wuzhizhan.mybatis.provider.MapperLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="XML"
                                        implementationClass="cn.wuzhizhan.mybatis.provider.StatementLineMarkerProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="cn.wuzhizhan.mybatis.provider.InjectionLineMarkerProvider"/>
        <applicationConfigurable instance="cn.wuzhizhan.mybatis.setting.MybatisConfigurable"/>
        <applicationService serviceInterface="cn.wuzhizhan.mybatis.setting.MybatisSetting"
                            serviceImplementation="cn.wuzhizhan.mybatis.setting.MybatisSetting"/>
        <completion.contributor language="XML"
                                implementationClass="cn.wuzhizhan.mybatis.contributor.TestParamContributor"/>
        <completion.contributor language="SQL"
                                implementationClass="cn.wuzhizhan.mybatis.contributor.SqlParamCompletionContributor"
                                order="first"/>
        <fileTemplateGroup implementation="cn.wuzhizhan.mybatis.template.MybatisFileTemplateDescriptorFactory"/>
        <typedHandler implementation="cn.wuzhizhan.mybatis.action.MybatisTypedHandler" id="mybatis" order="first"/>
        <defaultLiveTemplatesProvider implementation="cn.wuzhizhan.mybatis.template.SqlLiveTemplateProvider"/>
        <refactoring.elementListenerProvider
                implementation="cn.wuzhizhan.mybatis.refactoring.MapperRefactoringProvider"/>
        <localInspection language="JAVA" shortName="MybatisMapperMethodInspection"
                         displayName="Mapper method inspection"
                         groupName="Mybatis" enabledByDefault="true" level="ERROR"
                         implementationClass="cn.wuzhizhan.mybatis.inspection.MapperMethodInspection"/>
        <localInspection language="XML" shortName="MybatisMapperXmlInspection" enabledByDefault="true" level="ERROR"
                         displayName="Mapper xml inspection"
                         groupName="Mybatis"
                         implementationClass="cn.wuzhizhan.mybatis.inspection.MapperXmlInspection"/>
        <intentionAction>
            <className>cn.wuzhizhan.mybatis.intention.GenerateParamAnnotationIntention</className>
        </intentionAction>
        <intentionAction>
            <className>cn.wuzhizhan.mybatis.intention.GenerateStatementIntention</className>
        </intentionAction>
        <intentionAction order="first">
            <className>cn.wuzhizhan.mybatis.intention.GenerateMapperIntention</className>
        </intentionAction>
    </extensions>
</idea-plugin>